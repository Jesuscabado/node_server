extends ../layout 

block content 
    link(rel="stylesheet", href="/css/style.css")
    h1 Jugadores
    table 
        thead 
            th Nombre 
            th Apellido 
            th Edad 
            th Equipo 
        thbody
            each player in players 
                tr 
                    td
                      a(href=`/players/player/${player.idplayer}`)=player.name
                    td=player.last_name 
                    td=player.age 
                    if player.team 
                        td=player.team.name 
                    else 
                        td Sin Equipo
                
                    td
                        form(action=`/players/delete/${player.idplayer}`, method="post")
                            input(type="hidden", name="password", value="mi-contraseña")
                            input(type="submit", class="btn", value="Eliminar")
                        
                        form(action=`/players/edit/${player.idplayer}`, method="get")
                            input(type="hidden", name="password", value="mi-contraseña")
                            input(type="submit", class="btn edit", value="Editar")


    br
    a(href="/players/new") 
        button Crear un jugador